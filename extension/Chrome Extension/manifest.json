{
  "name": "WikiClassify",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "View Wikipedia page classifications",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" :
  {
    "default_icon" : "icon.png",
    "default_title" : "WikiClassify",
	"default_popup" : "popup.html"
  },
  "permissions" : [
    "declarativeContent",
    "activeTab",
	"tabs"
  ]
}